.mission__pic {
    overflow: hidden;
    margin-bottom: 32px;
}

.mission__pic img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    margin: 0 auto;
}

.text-box_text {
    p {
        margin: 0;
    }

    p:first-child {
        margin-bottom: 20px;
    }
}

.benefits-box {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(auto, 1fr);
    justify-items: center;
    row-gap: 40px;
    column-gap: 10px;
    margin: 56px 0 0 0;
    align-items: end;

    .benefit:nth-child(5) {
        grid-column: 1/-1;
    }
}
.benefit {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-items: center;
    align-items: center;
    min-width: 140px;

    .benefit__ic {
        width: 56px;
        height: 56px;
        margin-bottom: 16px;

        img {
            width: 100%;
            height: 100%;
        }
    }
    

    .benefit__title-num {
        font-family: 'Sofia Pro';
        font-style: normal;
        font-weight: 700;
        font-size: 32px;
        line-height: 40px;
    }

    .benefit__title-letter {
        font-family: 'Sofia Pro';
        font-style: normal;
        font-weight: 700;
        font-size: 30px;
        line-height: 32px;
    }

    p {
        font-size: 12px;
        line-height: 16px;
        padding: 0;
        margin: 0;
        margin-top: 8px;
    }
}

@media (min-width: 576px) {

    .benefits-box {
        grid-template-columns: repeat(6, 1fr);
        grid-template-rows: repeat(2, 1fr);
        column-gap: 30px;
        margin: 96px 0;
        
        .benefit:nth-child(1) {
            grid-column: 1/3;
        }

        .benefit:nth-child(2) {
            grid-column: 3/5;
        }

        .benefit:nth-child(3) {
            grid-column: 5/7;
        }

        .benefit:nth-child(4) {
            grid-column: 1/4;
        }

        .benefit:nth-child(5) {
            grid-column: 4/7;
        }

        .benefit__ic {
            width: 72px;
            height: 72px;
        }
    }
}

@media (min-width: 768px) {
    
    .mission-text-box {
        display: flex;
    }

    .mission__pic {
        max-height: 180px;
        max-width: 486px;
        min-width: 300px;
        margin-bottom: 0px;
        margin-top: 5px;
    
        img {
            margin-right: 10px;
            float: left;
        }
    }

    .text-box_text {
        margin-left: 10px;

        p {
            font-size: 18px;
            line-height: 26px;
        }
    }
}

@media (min-width: 992px) {

    .mission__pic {
        max-height: 315px;
    }

    .text-box_text {
        height: auto;
        max-width: 570px;
        margin-left: 54px;
    }

    .benefits-box {
        grid-template-columns: repeat(5, 1fr);
        grid-template-rows: 1fr;
        row-gap: 0px;
        column-gap: 30px;
        margin: 96px 0;
        
        .benefit:nth-child(1) {
            grid-column: 1/2;
        }

        .benefit:nth-child(2) {
            grid-column: 2/3;
        }

        .benefit:nth-child(3) {
            grid-column: 3/4;
        }

        .benefit:nth-child(4) {
            grid-column: 4/5;
        }

        .benefit:nth-child(5) {
            grid-column: 5/6;
        }
    }
}
